//ejemplo de funcion del tipo: "Devuelve algo y recibe algo"

#include <stdio.h>
#include <stdlib.h>

int sumar(int num1, int num2);
int numero1;
int numero2;
int resultado;

int main()
{
    printf("Ingresar el primer numero: ");
    scanf("%d",&numero1);
    printf("Ingresar el segundo numero: ");
    scanf("%d",&numero2);

    resultado = sumar(numero1, numero2);

    printf("Resultado %d", resultado);
    return 0;
}

int sumar(int num1, int num2){
    resultado = num1+num2;
    return resultado;
}

