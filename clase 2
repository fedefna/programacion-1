//ejemplo de funcion del tipo: "Devuelve algo y no recibe nada"
#include <stdio.h>
#include <stdlib.h>

int sumar();
int resultado;
int main()
{
    resultado = sumar();
    printf("Resultado: %d", resultado);
    return 0;
}

int sumar(){
    int num1;
    int num2;
    int resultado;

    printf("Ingresar el primer numero: ");
    scanf("%d",&num1);
    printf("Ingresar el segundo numero: ");
    scanf("%d",&num2);

    resultado = num1+num2;

}
