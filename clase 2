//ejemplo de funcion del tipo: "no devuelve nada y no recibe nada"
#include <stdio.h>
#include <stdlib.h>

void sumar();

int main()
{
    sumar();

    return 0;
}

void sumar(){
    int num1;
    int num2;
    int resultado;

    printf("Ingresar el primer numero: ");
    scanf("%d",&num1);
    printf("Ingresar el segundo numero: ");
    scanf("%d",&num2);

    resultado = num1+num2;
    printf("Resultado: %d", resultado);
}






