//ejemplo de funcion del tipo: "No Devuelve nada y recibe algo"
#include <stdio.h>
#include <stdlib.h>

void sumar(int num1, int num2);
int numero1;
int numero2;
int resultado;

int main()
{
    printf("Ingresar el primer numero: ");
    scanf("%d",&numero1);
    printf("Ingresar el segundo numero: ");
    scanf("%d",&numero2);

    sumar(numero1,numero2);
    return 0;
}

void sumar(int num1, int num2){
    resultado = num1+num2;
    printf("Resultado: %d", resultado);
}
